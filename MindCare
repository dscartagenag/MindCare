    <script>
        // Variables globales
        let breathingInterval;
        let isBreathing = false;
        let currentMood = null;
        
        // Data storage
        let appData = {
            moods: [],
            journalEntries: [],
            breathingSessions: 0,
            moodStreak: 0
        };

        // Tab functionality
        function showTab(tabName) {
            // Hide all tabs
            const tabs = document.querySelectorAll('.tab-content');
            tabs.forEach(tab => tab.classList.remove('active'));
            
            // Remove active from all buttons
            const buttons = document.querySelectorAll('.tab-btn');
            buttons.forEach(btn => btn.classList.remove('active'));
            
            // Show selected tab
            document.getElementById(tabName).classList.add('active');
            event.target.classList.add('active');
        }

        // Mood functionality
        function selectMood(element, mood) {
            // Remove previous selection
            const moodBtns = document.querySelectorAll('.mood-btn');
            moodBtns.forEach(btn => btn.classList.remove('selected'));
            
            // Add selection to clicked element
            element.classList.add('selected');
            currentMood = mood;
        }

        function saveMood() {
            if (!currentMood) {
                alert('Por favor selecciona tu estado de √°nimo');
                return;
            }
            
            const note = document.getElementById('moodNote').value;
            const moodEntry = {
                mood: currentMood,
                note: note,
                date: new Date().toLocaleDateString(),
                timestamp: new Date().getTime()
            };
            
            appData.moods.push(moodEntry);
            updateStats();
            
            alert('Estado de √°nimo guardado correctamente');
            
            // Reset form
            document.querySelectorAll('.mood-btn').forEach(btn => btn.classList.remove('selected'));
            document.getElementById('moodNote').value = '';
            currentMood = null;
        }

        // Breathing exercise
        function startBreathing() {
            if (isBreathing) return;
            
            isBreathing = true;
            const circle = document.getElementById('breathingCircle');
            const text = document.getElementById('breathingText');
            let phase = 0; // 0: inhale, 1: hold, 2: exhale, 3: hold
            
            breathingInterval = setInterval(() => {
                switch(phase) {
                    case 0: // Inhale
                        text.textContent = 'Inhala';
                        circle.classList.remove('exhale');
                        circle.classList.add('inhale');
                        phase = 1;
                        break;
                    case 1: // Hold after inhale
                        text.textContent = 'Mant√©n';
                        setTimeout(() => { phase = 2; }, 1000);
                        break;
                    case 2: // Exhale
                        text.textContent = 'Exhala';
                        circle.classList.remove('inhale');
                        circle.classList.add('exhale');
                        phase = 3;
                        break;
                    case 3: // Hold after exhale
                        text.textContent = 'Mant√©n';
                        setTimeout(() => { phase = 0; }, 1000);
                        break;
                }
            }, 4000);
            
            // Update session count
            appData.breathingSessions++;
            updateStats();
        }

        function stopBreathing() {
            isBreathing = false;
            clearInterval(breathingInterval);
            
            const circle = document.getElementById('breathingCircle');
            const text = document.getElementById('breathingText');
            
            circle.classList.remove('inhale', 'exhale');
            text.textContent = 'Presiona Iniciar';
        }

        // Journal functionality
        function saveJournalEntry() {
            const title = document.getElementById('journalTitle').value;
            const text = document.getElementById('journalText').value;
            
            if (!title || !text) {
                alert('Por favor completa el t√≠tulo y el contenido');
                return;
            }
            
            const entry = {
                title: title,
                content: text,
                date: new Date().toLocaleDateString(),
                timestamp: new Date().getTime()
            };
            
            appData.journalEntries.unshift(entry);
            updateStats();
            displayJournalEntries();
            
            // Clear form
            document.getElementById('journalTitle').value = '';
            document.getElementById('journalText').value = '';
            
            alert('Entrada guardada correctamente');
        }

        function displayJournalEntries() {
            const entriesList = document.getElementById('entriesList');
            entriesList.innerHTML = '';
            
            appData.journalEntries.slice(0, 5).forEach(entry => {
                const entryDiv = document.createElement('div');
                entryDiv.style.cssText = `
                    background: #f8f9ff;
                    padding: 15px;
                    margin: 10px 0;
                    border-radius: 10px;
                    border-left: 4px solid #667eea;
                `;
                
                entryDiv.innerHTML = `
                    <h4>${entry.title}</h4>
                    <p style="color: #666; font-size: 0.9em; margin: 5px 0;">${entry.date}</p>
                    <p>${entry.content.substring(0, 150)}${entry.content.length > 150 ? '...' : ''}</p>
                `;
                
                entriesList.appendChild(entryDiv);
            });
        }

        // Update statistics
        function updateStats() {
            document.getElementById('moodStreak').textContent = appData.moods.length;
            document.getElementById('journalEntries').textContent = appData.journalEntries.length;
            document.getElementById('breathingSessions').textContent = appData.breathingSessions;
        }

        // Initialize app
        document.addEventListener('DOMContentLoaded', function() {
            updateStats();
            displayJournalEntries();
            
            // Add welcome message
            setTimeout(() => {
                if (appData.journalEntries.length === 0 && appData.moods.length === 0) {
                    alert('¬°Bienvenido a MindCare! üß†\n\nComienza registrando tu estado de √°nimo o escribiendo en tu diario personal.');
                }
            }, 1000);
        });
    </script>
</body>
